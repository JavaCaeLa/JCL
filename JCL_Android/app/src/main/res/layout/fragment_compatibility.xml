<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hpc.jcl_android.MainActivity" >


    <TextView
        android:id="@+id/txList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnrun"
        android:layout_below="@+id/btnrun"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:maxLines = "50"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="run"
        android:text="Run" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testUser"
        android:id="@+id/btnUser"
        android:layout_above="@+id/txList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="testUser"
        android:visibility="gone"/>

</RelativeLayout>
